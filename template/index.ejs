<% layout('layout/page') -%>
<% block('title', 'Velocity Report') -%>

<div id="container" class="container" ng-controller="velocityChartController">
    <div class="row">
        <div class="col-sm-2">
            <label class="control-label">View Type</label>
            <select class="form-control" ng-model="common.viewType" ng-options="c.id as c.title for c in viewTypes"
                    ng-change="reInit()"></select>
        </div>
    </div>
    </br>

    </br>

    <div class="row" ng-switch on="common.viewType">
        <div class="container" ng-switch-when="Velocity">
            <div class="row">
                <highchart id="chart1" class="col-sm-12" config="chartConfig"></highchart>
            </div>
        </div>

        <div ng-switch-when="Progress">
            <div>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th style="width: 157px">Team</th>
                        <th>User</th>
                        <th>Key</th>
                        <th>Progress</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="dateGroup in progressData.dates">
                        <td class="vcenter" style="padding-bottom: 28px;"><strong>{{dateGroup.date | date:'yyyy-MM-dd'}}</strong></td>
                        <td colspan="4" class="progress_table_no_end_line">
                            <table class="table" ng-repeat="team in dateGroup.teams">
                                <tbody>
                                    <tr class="progress_no_top_line">
                                        <td class="progress_fixed_width vcenter">{{team.name}}</td>
                                        <td class="progress_table_no_end_line">
                                            <table class="table table-striped">
                                                <tbody>
                                                    <tr class="progress_fixed_width" ng-repeat="page in team.pages">
                                                        <td>{{page.person}}</td>
                                                        <td><a href={{page.uri}}>{{page.key}}</a></td>
                                                        <td>{{page.progress | number : 2}}</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

